<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.co.ana.babylock6.Bluelight"
    android:background="@drawable/blue_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/back"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/lock_back"
        android:onClick="Onclick"/>

    <Switch
        android:id="@+id/sw_use"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="45dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <SeekBar
        android:id="@+id/seekbar_op"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="80dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="50"
        android:secondaryProgress="100"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="40dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/blue_red"/>
        <ImageView
            android:layout_marginLeft="40dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/blue_yellow"/>
        <ImageView
            android:layout_marginLeft="40dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/blue_blue"/>
        <ImageView
            android:layout_marginLeft="40dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/blue_black"/>
    </LinearLayout>
</LinearLayout>
