<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.co.ana.babylock6.Unlock_gesture"
    android:background="@drawable/gesture_main"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/back_un_ge"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/lock_back"
        android:onClick="Onclick"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ge_mb"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/mobiledata_off"
            android:onClick="Onclick"/>
        <ImageView
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/gesture_on"
            android:onClick="Onclick"/>
    </LinearLayout>

    <ImageView
        android:layout_marginTop="150dp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/gesture_input"/>

    <Button
        android:id="@+id/btn_check2"
        android:text="Check"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
